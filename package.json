{
  "name": "commitlint-config-faithlife",
  "description": "Shareable configuration for `commitlint` used by Faithlife / Logos Bible Software.",
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/Faithlife/commitlint-config-faithlife",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --check **/*.{js,json}"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "conventional-changelog",
    "commitlint",
    "commitlint-config"
  ],
  "release": {
    "branch": "master"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3"
  }
}
